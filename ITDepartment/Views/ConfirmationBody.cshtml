@model ITDepartment.Models.ConfirmationModel
<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">&times;</button>
            <h4 class="modal-title">Confirm</h4>
        </div>
        <div class="modal-body">
            <div class="modal-title">Are you sure you want to delete <b>@Model.ObjectType: "@Model.Name"</b>?</div>
        </div>
        <div class="modal-footer">
            @using (Html.BeginForm("Delete", Model.ControllerName, FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                @Html.Hidden("id", Model.Id)
                <input type="button" value = "Cancel" onclick = "location.href = '@Url.Action("Index")'" class="btn btn-danger"/>
                <input type="submit" value="Yes" class="btn btn-success"/>
            }
        </div>
    </div>
</div>



