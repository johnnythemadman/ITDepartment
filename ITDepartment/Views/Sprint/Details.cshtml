@model ITDepartment.Models.Sprint.SprintDetailsViewModel

@{
    ViewBag.Title = "Edit";
}

<h2>Details</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>Sprint</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.SprintId)

    <div class="form-group">
        @Html.LabelFor(model => model.ProjectName, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.ProjectName, new { @class = "form-control", disabled = "disabled" })
            @Html.ValidationMessageFor(model => model.ProjectId, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.SprintStart, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.SprintStart, new { htmlAttributes = new { @class = "form-control datepicker", autocomplete = "off", disabled = "disabled" } })
            @Html.ValidationMessageFor(model => model.SprintStart, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.SpintEnd, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.SpintEnd, new { htmlAttributes = new { @class = "form-control datepicker", autocomplete = "off", disabled = "disabled" } })
            @Html.ValidationMessageFor(model => model.SpintEnd, "", new { @class = "text-danger" })
        </div>
    </div>

</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

