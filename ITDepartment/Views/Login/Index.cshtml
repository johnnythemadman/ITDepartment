@using ITDepartment.Resources
@using System.Net.Mime

@model ITDepartment.Models.LoginFormModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    @Styles.Render("~/Content/bootstrap.css")
</head>
<body class="body-content bg-info">
    <div class="container">
        @using (Html.BeginForm("Login", "Login", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <div class="row justify-content-md-center">
                <div class="row">
                    <div class="form-group col-md-4 col-md-offset-4">

                        @Html.LabelFor(model => model.UserName)
                        @Html.TextBoxFor(model => model.UserName, htmlAttributes: new { @class = "form-control", placeholder = "Enter username" })
                        @Html.ValidationMessageFor(model => model.UserName, string.Empty, htmlAttributes: new { @class ="text-danger"})
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-md-4 col-md-offset-4">
                        @Html.LabelFor(model => model.Password)
                        @Html.PasswordFor(model => model.Password, htmlAttributes: new { @class = "form-control", placeholder = "Enter password" })
                        @Html.ValidationMessageFor(model => model.Password, string.Empty, htmlAttributes: new { @class = "text-danger"})
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-md-4 col-md-offset-4">
                        @Html.LabelFor(model => model.Roles)
                        @Html.DropDownListFor(model => model.SelectedRoleId, Model.Roles, htmlAttributes: new { @class = "form-control" }, optionLabel: Text.SelectRole)
                        @Html.ValidationMessageFor(model => model.SelectedRoleId, string.Empty, htmlAttributes: new { @class = "text-danger"})
                    </div>

                </div>
                <div class="row">
                    <div class="form-group col-md-4 col-md-offset-4">
                        <input type="submit" name="submit-button" id="submit-button" class="btn btn-default" value="Login" />
                    </div>

                </div>

            </div>
        }
    </div>
</body>
</html>
